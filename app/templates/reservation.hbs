<div class="row">
    <div class="large-12 columns">
        <h1>Réserver</h1>
        <form {{action 'createReservation' on='submit'}} id="createReservation">
            <div class="row">
                <div class="large-12 columns">
                    <div>
                        <label>Courriel</label>
                        {{input value=reservation.email required='true' focus-out="didUser" type="email" placeholder="john@doe.org"}}
                        <small>Un courriel valide est requis</small>
                    </div>

                    {{#if setPassword}}
                    <div>
                        <label>Mot de passe</label>
                        {{input value=reservation.password placeholder='Votre mot de passe' pattern="^.{6,}$" type='password' required='true'}}
                        <small>Doit être supérieur à 6 caractères</small>
                    </div>
                    {{/if}}

                    <div>
                        <label>
                            {{input type="checkbox" checked=isSame class="inline"}}
                            Je serais l'usagé de la salle
                        </label>
                    </div>


                    <h2 class="u-cf">Date</h2>
                    <div>
                        <label>
                            {{input type="checkbox" checked=isAllDay class="inline"}}
                            Toute la journée
                        </label>
                    </div>
                    {{#if isAllDay}}
                    <div>
                        {{input value=reservation.begin type='date' required='true' min=today}}
                        au {{input value=reservation.end type='date' required='true' min=reservation.begin}}
                        <small></small>
                    </div>
                    {{else}}
                    <div>
                        {{input value=reservation.begin type='datetime-local' required='true' min=today}}
                        au {{input value=reservation.end type='datetime-local' required='true' min=reservation.begin}}
                        <small></small>
                    </div>
                    {{/if}}
                    {{#if nbDay}}
                    <div>
                        Soit {{nbDay}} jours
                    </div>
                    {{/if}}

                    <button type="submit ">Je réserve !</button>
                </div>
            </div>
        </form>
    </div>
</div>
